{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["flowtype", "prettier", "jest"],
  "globals": {
    "stream$Readable": true,
    "tty$ReadStream": true,
    "stream$Writable": true,
    "tty$WriteStream": true
  },
  "rules": {
    "strict": 0,
    "no-underscore-dangle": 0,
    "arrow-body-style": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "react/jsx-filename-extension": "off"
  },
  "env": {
    "jest/globals": true
  }
}
